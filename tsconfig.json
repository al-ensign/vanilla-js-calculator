{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "src",
    "noImplicitAny": true,
    "module": "ES6",
    "target": "ES6",
    "allowJs": true,
    "moduleResolution": "node",
    "preserveSymlinks": true,
    "esModuleInterop": true
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
